{
    "name": "mascotas",
    "version": "0.1.0",
    "description": "Mascotas - Programaci√≥n Avanzada",
    "author": "Nestor Marsollier",
    "license": "MIT",
    "scripts": {
        "start": "npm run build && npm run watch",
        "build": "npm run build-ts && npm run tslint && npm run apidoc && npm run apidocmd",
        "serve": "node dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\"  \"npm run watch-ts\" \"nodemon dist/server.js\"",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "apidoc": "./node_modules/.bin/apidoc -i src -o ./dist/public",
        "apidocmd": "./node_modules/.bin/apidoc-markdown2 -p ./dist/public -o README-API.md"
    },
    "dependencies": {
        "body-parser": "1.18.3",
        "compression": "1.7.3",
        "connect-mongo": "2.0.3",
        "cors": "2.8.5",
        "dotenv": "6.2.0",
        "escape-html": "1.0.3",
        "express": "4.16.4",
        "express-async-errors": "^3.1.1",
        "helmet": "3.15.0",
        "ioredis": "4.3.0",
        "jsonwebtoken": "8.4.0",
        "mongoose": "5.7.7",
        "morgan": "1.9.1",
        "node-cache": "4.2.0",
        "passport": "0.4.0",
        "passport-jwt": "4.0.0",
        "uuid": "3.3.2",
        "winston": "3.1.0"
    },
    "devDependencies": {
        "@types/body-parser": "1.17.0",
        "@types/connect-mongo": "0.0.35",
        "@types/dotenv": "6.1.0",
        "@types/express": "4.16.0",
        "@types/mongodb": "3.1.17",
        "@types/mongoose": "5.3.5",
        "@types/escape-html": "0.0.20",
        "@types/node-cache": "4.1.1",
        "@types/morgan": "1.7.35",
        "@types/node": "8.9.4",
        "@types/passport": "0.4.7",
        "@types/passport-jwt": "3.0.1",
        "@types/helmet": "0.0.42",
        "@types/cors": "2.8.4",
        "@types/compression": "0.0.36",
        "@types/jsonwebtoken": "8.3.0",
        "@types/uuid": "^3.4.4",
        "@types/ioredis": "^4.0.4",
        "apidoc": "0.17.7",
        "apidoc-markdown2": "0.3.7",
        "concurrently": "4.1.0",
        "tslint": "5.12.0",
        "nodemon": "1.18.9",
        "typescript": "3.2.2"
    }
}
