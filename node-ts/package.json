{
  "name": "mascotas-node-typescript",
  "version": "0.1.0",
  "description": "Server de Masctoas en Node con TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/nmarsollier/pa2018_mascotas.git"
  },
  "author": "Nestor Marsollier",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint && npm run copy-static-assets",
    "serve": "node dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\"  \"npm run watch-ts\" \"nodemon dist/server.js\"",
    "test": "jest --forceExit",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "node copyStaticAssets.js"
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": ["ts", "js"],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": ["**/test/**/*.test.(ts|js)"],
    "testEnvironment": "node"
  },
  "dependencies": {
    "async": "2.5.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "1.17.2",
    "compression": "1.7.0",
    "connect-mongo": "1.3.2",
    "dotenv": "4.0.0",
    "errorhandler": "1.5.0",
    "express": "4.15.3",
    "express-flash": "0.0.2",
    "express-session": "1.15.3",
    "express-validator": "3.2.1",
    "lodash": "4.17.4",
    "lusca": "1.4.1",
    "mongoose": "4.11.1",
    "morgan": "1.8.2",
    "nodemailer": "4.0.1",
    "passport": "0.3.2",
    "winston": "2.3.1",
    "passport-local": "1.0.0",
    "pug": "2.0.0-rc.2",
    "request": "2.81.0",
    "helmet": "3.6.1",
    "method-override": "2.3.9",
    "cookie-parser": "1.4.3",
    "chalk": "2.0.1",
    "cors": "2.8.3"
  },
  "devDependencies": {
    "@types/async": "2.0.40",
    "@types/body-parser": "1.16.4",
    "@types/connect-mongo": "0.0.33",
    "@types/dotenv": "4.0.0",
    "@types/errorhandler": "0.0.30",
    "@types/express": "4.0.36",
    "@types/express-session": "1.15.0",
    "@types/jest": "20.0.2",
    "@types/jquery": "3.2.6",
    "@types/lodash": "4.14.68",
    "@types/mongodb": "2.2.7",
    "@types/mongoose": "4.7.18",
    "@types/morgan": "1.7.32",
    "@types/node": "8.1.0",
    "@types/nodemailer": "1.3.33",
    "@types/passport": "0.3.3",
    "@types/passport-facebook": "2.1.5",
    "@types/request": "0.0.45",
    "@types/supertest": "2.0.1",
    "@types/helmet": "0.0.35",
    "@types/method-override": "0.0.29",
    "@types/cookie-parser": "1.3.30",
    "@types/chalk": "0.4.31",
    "@types/cors": "2.8.1",
    "@types/compression": "0.0.33",
    "@types/passport-local": "1.0.30",
    "@types/winston": "2.3.3",
    "concurrently": "3.5.0",
    "jest": "20.0.4",
    "nodemon": "1.11.0",
    "shelljs": "0.7.8",
    "supertest": "3.0.0",
    "ts-jest": "20.0.7",
    "tslint": "5.5.0",
    "typescript": "2.4.1"
  }
}
